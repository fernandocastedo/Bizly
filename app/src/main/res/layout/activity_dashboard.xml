<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Título: Dashboard -->
    <TextView
        android:id="@+id/tvDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_title"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtítulo: Bienvenido -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_subtitle"
        android:textColor="#666666"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tvDashboardTitle"
        app:layout_constraintTop_toBottomOf="@id/tvDashboardTitle" />

    <!-- Contenedor Gris con Botones Agregar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAddActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#F0F0F0"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <!-- Botón Agregar Producto -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddProduct"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/btn_add_product"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textAllCaps="false"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="top"
                app:iconSize="28dp"
                app:iconTint="@color/white"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/primary_color" />

            <!-- Botón Agregar Insumo -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddSupply"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/btn_add_supply"
                android:textColor="@color/primary_color"
                android:textSize="13sp"
                android:textAllCaps="false"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="2dp"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="top"
                app:iconSize="28dp"
                app:iconTint="@color/primary_color"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/white" />
            
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Grid de Botones (2 columnas, 3 filas) -->
    <GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        app:layout_constraintTop_toBottomOf="@id/cardAddActions"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Fila 1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInventory"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/btn_inventory"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:icon="@android:drawable/ic_menu_agenda"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_color"
            app:strokeColor="#E0E0E0"
            android:backgroundTint="@color/white"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSales"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/btn_sales"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:icon="@android:drawable/ic_menu_upload"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_color"
            app:strokeColor="#E0E0E0"
            android:backgroundTint="@color/white"
            app:cornerRadius="12dp" />

        <!-- Fila 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCustomers"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/btn_customers"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:icon="@android:drawable/ic_menu_myplaces"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_color"
            app:strokeColor="#E0E0E0"
            android:backgroundTint="@color/white"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEmployees"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/btn_employees"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:icon="@android:drawable/ic_menu_info_details"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_color"
            app:strokeColor="#E0E0E0"
            android:backgroundTint="@color/white"
            app:cornerRadius="12dp" />

        <!-- Fila 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCosts"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/btn_costs"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:icon="@android:drawable/ic_menu_sort_by_size"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_color"
            app:strokeColor="#E0E0E0"
            android:backgroundTint="@color/white"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExpenses"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/btn_expenses"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:icon="@android:drawable/ic_delete"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_color"
            app:strokeColor="#E0E0E0"
            android:backgroundTint="@color/white"
            app:cornerRadius="12dp" />
            
    </GridLayout>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/menu_bottom_nav"
        app:itemIconTint="@color/primary_color"
        app:itemTextColor="@color/primary_color"
        app:labelVisibilityMode="labeled"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>