<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ventas.VentasActivity">

    <!-- Header azul con patrón hexagonal -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_hexagonal_pattern"
        app:layout_constraintHeight_percent="0.33"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón de flecha atrás -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_arrow_back_white"
        android:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título Header -->
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="110dp"
        android:letterSpacing="0.05"
        android:text="Nueva Venta"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cardAnchor"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Anchor auxiliar -->
    <View
        android:id="@+id/cardAnchor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/headerBackground"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Tarjeta blanca sobrepuesta -->
    <FrameLayout
        android:id="@+id/formCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-130dp"
        android:background="@drawable/card_top_rounded"
        android:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/headerBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="24dp"
            android:paddingTop="32dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="40dp">

                <!-- Header Interno con Botón Guardar -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detalles de Venta"
                        android:textColor="#1A3D64"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true" />

                    <!-- Botón Guardar Circular -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGuardarVenta"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="24dp"
                        app:icon="@drawable/ic_check"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@android:color/white"
                        app:backgroundTint="@color/primary_color"
                        app:strokeWidth="0dp"
                        android:text=""
                        app:elevation="4dp"/>
                </RelativeLayout>

                <!-- Sección Cliente -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente"
                    android:textColor="#1A3D64"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- NIT -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutNit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:boxBackgroundColor="#F5F5F5"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeWidth="0dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNit"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@null"
                        android:hint="NIT / CI"
                        android:textColorHint="#A0A0A0"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Nombre Cliente -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutNombreCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:boxBackgroundColor="#F5F5F5"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeWidth="0dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNombreCliente"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@null"
                        android:hint="Nombre del Cliente"
                        android:textColorHint="#A0A0A0"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Checkbox Pedido y Botón Expandir -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/checkPedido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Es Pedido"
                        android:textColor="#666" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExpandirCliente"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Más info"
                        android:textSize="12sp"
                        android:paddingVertical="0dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                </LinearLayout>

                <!-- Campos Adicionales (Dirección, Teléfono, Email) -->
                <LinearLayout
                    android:id="@+id/containerCamposAdicionales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp">

                    <!-- Dirección -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        app:boxBackgroundColor="#F5F5F5"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeWidth="0dp"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDireccion"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@null"
                            android:hint="Dirección"
                            android:textColorHint="#A0A0A0"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:gravity="center_vertical"
                            android:inputType="textPostalAddress"
                            android:maxLines="2" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Teléfono -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        app:boxBackgroundColor="#F5F5F5"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeWidth="0dp"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTelefono"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@null"
                            android:hint="Teléfono"
                            android:textColorHint="#A0A0A0"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:gravity="center_vertical"
                            android:inputType="phone"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        app:boxBackgroundColor="#F5F5F5"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeWidth="0dp"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@null"
                            android:hint="Email"
                            android:textColorHint="#A0A0A0"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:gravity="center_vertical"
                            android:inputType="textEmailAddress"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                
                <!-- Campos Envío (Visualmente agrupados si es necesario, pero usando los mismos campos) -->
                <LinearLayout
                    android:id="@+id/containerCamposEnvio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="#E3F2FD"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">
                    
                    <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Datos de Envío requeridos"
                         android:textColor="#1976D2"
                         android:textSize="12sp"
                         android:drawablePadding="8dp"
                         app:drawableStartCompat="@android:drawable/ic_dialog_info" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEE"
                    android:layout_marginBottom="16dp" />

                <!-- Sección Productos -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Productos"
                    android:textColor="#1A3D64"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAgregarProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+ Agregar Producto"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/primary_color"
                    app:strokeWidth="1dp" />

                <TextView
                    android:id="@+id/txtEmptyProductos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="El carrito está vacío."
                    android:textAlignment="center"
                    android:textColor="#999"
                    android:padding="16dp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewProductos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="24dp"/>

                <!-- Total -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5F5F5">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        
                        <TextView
                            android:id="@+id/txtTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total: Bs. 0.00"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1A3D64"
                            android:textAlignment="center"
                            android:layout_marginBottom="16dp" />
                            
                        <!-- Recibí y Cambio -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/layoutRecibi"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                                app:boxBackgroundColor="#FFF"
                                app:boxCornerRadiusTopStart="8dp"
                                app:boxCornerRadiusTopEnd="8dp"
                                app:boxCornerRadiusBottomStart="8dp"
                                app:boxCornerRadiusBottomEnd="8dp"
                                app:boxStrokeWidth="0dp"
                                app:hintEnabled="false">
            
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etRecibi"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@null"
                                    android:hint="Recibí"
                                    android:gravity="center"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1"
                                    android:text="0.00" />
                            </com.google.android.material.textfield.TextInputLayout>
                            
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/input_field_background"
                                android:gravity="center">
                                
                                <TextView
                                    android:id="@+id/txtCambio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cambio: 0.00"
                                    android:textStyle="bold"
                                    android:textColor="#4CAF50" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEE"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp" />

                <!-- Sección Pago -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Información de Pago"
                    android:textColor="#1A3D64"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Método de Pago -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:boxBackgroundColor="#F5F5F5"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeWidth="0dp">

                    <Spinner
                        android:id="@+id/spinnerMetodoPago"
                        android:layout_width="match_parent"
                        android:layout_height="56dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Estado de Pago -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:boxBackgroundColor="#F5F5F5"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeWidth="0dp">

                    <Spinner
                        android:id="@+id/spinnerEstadoPago"
                        android:layout_width="match_parent"
                        android:layout_height="56dp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
