<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos para acceso a imÃ¡genes -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bizly1">
        <activity
            android:name="com.bizly.app.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bizly.app.presentation.auth.RegisterActivity"
            android:exported="false"
            android:parentActivityName="com.bizly.app.MainActivity" />
        <activity
            android:name="com.bizly.app.presentation.dashboard.DashboardActivity"
            android:exported="false"
            android:parentActivityName="com.bizly.app.MainActivity" />
        <activity
            android:name="com.bizly.app.presentation.emprendimiento.EmprendimientoActivity"
            android:exported="false"
            android:parentActivityName="com.bizly.app.presentation.dashboard.DashboardActivity" />
        <activity
            android:name="com.bizly.app.presentation.sucursales.SucursalesActivity"
            android:exported="false"
            android:parentActivityName="com.bizly.app.presentation.dashboard.DashboardActivity" />
        <activity
            android:name="com.bizly.app.presentation.sucursales.RegistrarSucursalActivity"
            android:exported="false"
            android:parentActivityName="com.bizly.app.presentation.sucursales.SucursalesActivity" />
        <activity
            android:name="com.bizly.app.presentation.trabajadores.TrabajadoresActivity"
            android:exported="false"
            android:parentActivityName="com.bizly.app.presentation.dashboard.DashboardActivity" />
        <activity
            android:name="com.bizly.app.presentation.trabajadores.CrearTrabajadorActivity"
            android:exported="false"
            android:parentActivityName="com.bizly.app.presentation.trabajadores.TrabajadoresActivity" />
        <activity
            android:name="com.bizly.app.presentation.trabajadores.EditarTrabajadorActivity"
            android:exported="false"
            android:parentActivityName="com.bizly.app.presentation.trabajadores.TrabajadoresActivity" />
    </application>

</manifest>